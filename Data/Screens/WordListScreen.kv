#:kivy 2.3.0
#:include Data/Screens/UIElements/CustomScreen.kv
#:include Data/Screens/UIElements/ScreenLayout.kv
#:include Data/Screens/UIElements/WordItem.kv

<WordListScreen@CustomScreen>:
    recycleView: recycleView
    ScreenLayout:
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.9
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.05
                background: app.color.TextlineBackground
                padding: 1
                WordButton:
                    size_hint: 1, 1
                    text: app.text.Words
                    halign: "left"
                    on_release: root.SortByWord()
                WordButton:
                    size_hint: 0.1, 1
                    text: app.text.WordsAll
                    on_release: root.SortByGames()
                WordButton:
                    size_hint: 0.1, 1
                    text: app.text.WordsWin
                    on_release: root.SortByWinGames()
                WordButton:
                    size_hint: 0.1, 1
                    text: app.text.WordsFail
                    on_release: root.SortByFailGames()
                WordButton:
                    size_hint: 0.1, 1
                    text: app.text.WordsSeries
                    on_release: root.SortBySeriesGames()
                WordButton:
                    size_hint: 0.1, 1
                    text: ""
            RecycleView:
                id: recycleView
                data: root.data
                viewclass: 'WordItem'
                RecycleBoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1
                    height: self.minimum_height
                    default_size_hint: 1, None
                    default_size: 0, dp(40)
                    size_hint_y: None
                    spacing: dp(1)

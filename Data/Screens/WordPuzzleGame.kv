#:kivy 2.3.0
#:include Data/Screens/UIElements/CustomScreen.kv
#:include Data/Screens/UIElements/CharacterButton.kv
#:include Data/Screens/UIElements/UnicodeLabel.kv
#:include Data/Screens/UIElements/ScreenLayout.kv

<WordPuzzleGame@CustomScreen>:
    translationText: translationText
    baseWordText: baseWordText
    bottomInfoLine1: bottomInfoLine1
    bottomInfoLine2: bottomInfoLine2
    screenLayout: screenLayout
    ScreenLayout:
        id: screenLayout
        headerButtonFunc: root.DetailPressed
        headerButtonText: app.text.WordDetail
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.9
            padding: 5
            BoxLayout:
                size_hint: 1, 0.25
                UnicodeLabel:
                    id: translationText
                    font_size: 32
            BoxLayout:
                size_hint: 1, 0.25
                UnicodeLabel:
                    id: baseWordText
                    font_size: 32
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 0.6
                BoxLayout:
                StackLayout:
                    id: buttonsLine1
                    padding: 1
                    spacing: 1
                StackLayout:
                    id: buttonsLine2
                    padding: 1
                    spacing: 1
                StackLayout:
                    id: buttonsLine3
                    padding: 1
                    spacing: 1
            BoxLayout:
                id: bottomBox
                orientation: 'vertical'
                size_hint: 1, 0.25
                BoxLayout:
                    id: bottomBox1
                    UnicodeLabel:
                        id: bottomInfoLine1
                        halign: 'left'
                        valign: 'bottom'
                        text_size: bottomBox1.width, bottomBox1.height
                        font_size: 18
                BoxLayout:
                    id: bottomBox2
                    UnicodeLabel:
                        id: bottomInfoLine2
                        halign: 'left'
                        valign: 'center'
                        text_size: bottomBox2.width, bottomBox2.height
                        font_size: 18
